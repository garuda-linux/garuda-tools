#!/bin/bash
function goto
{
    label=$1
    cmd=$(sed -n "/^:[[:blank:]][[:blank:]]*${label}/{:a;n;p;ba};" $0 | 
          grep -v ':$')
    eval "$cmd"
    exit
}

function cleardir
{
    rm -rf /var/cache/garuda-tools/garuda-chroots/buildiso
    buildiso -i
}

