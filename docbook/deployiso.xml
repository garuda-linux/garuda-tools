<refentry id="deployiso" xmlns:xi="http://www.w3.org/2001/XInclude">

    <refentryinfo>
        <title>deployiso-+</title>
        <productname>garuda-tools</productname>

        <authorgroup>
            <author>
                <contrib></contrib>
                <firstname></firstname>
